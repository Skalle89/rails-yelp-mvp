<div class = "container">
  <div class = "row">
    <div class = "col-xs-12 col-sm-10 col-sm-offset-1">
              <h1>New Restaurant</h1>
              <%= simple_form_for @restaurant do |r| %>
              <%= r.input :name %>
              <%= r.input :address %>
              <%= r.input :phone_number %>
              <%= r.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
              <%= r.submit class: "btn btn-primary mb-3" %>
              <% end %>

              <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
